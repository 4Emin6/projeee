
@{
    Layout = null;
}

<!doctype html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="E-Spor Yönetim Sistemi Giriş Sayfası">
    <title>E-Spor Yönetim Sistemi</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Özel CSS -->
    <link href="~/Content/sign-in.css" rel="stylesheet" />
    
</head>
<body class="d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signin w-100 m-auto text-center">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {


            <img class="mb-4" src="~/Content/E-SPOR.png" alt="E-Spor Logo" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">E-Spor Yönetim Sistemi Giriş Sayfası</h1>

            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="Email" name="Email">
                <label for="Email">Email adresi</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="parola" name="parola">
                <label for="parola">Şifre</label>
            </div>

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="true" id="flexCheckDefault" name="RememberMe">
                <label class="form-check-label" for="flexCheckDefault">
                    Beni Hatırla
                </label>
            </div>
            <button class="btn btn-primary w-100 py-2 mb-2" type="submit">Giriş Yap</button>
            <a href="@Url.Action("Register", "Login")" class="btn btn-outline-secondary w-100 py-2">Kayıt Ol</a>
            <p class="mt-5 mb-3 text-body-secondary">&copy; 2024</p>

            if (ViewBag.mesaj != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.mesaj
                </div>
            }
        }
    </main>
</body>
</html>